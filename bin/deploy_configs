#!/bin/bash

## Symlinks all files from the git repository to wherever they should be.

DIR=$HOME"/.dotfiles/"
CONF=$HOME"/.config/"
ETC="/etc/"

# Links a file
# Takes two parameters, the folder to copy to and the file to copy
function link {
    if [ ! -h $1$2 ]
    then
        ln -fs $DIR$2 $1$2
    fi
}

function sudolink {
    if [ ! -h $1$2 ]
    then
        sudo ln -fs $DIR$2 $1$2
    fi
}

# Checks if a package is installed, if not, installs it
# Takes one parameter, the package to check
function checkInstallPkg {
    pacman -Qq $1 &> /dev/null
    if [ $? == "1" ]
    then
        sudo pacman -S $1
    fi
}

## home files
link $HOME"/" bin
link $HOME"/" .bashrc
link $HOME"/" .bash_profile
link $HOME"/" .profile
link $HOME"/" .xinitrc

## .config files
link $CONF awesome
link $CONF base16-shell
link $CONF bash
link $CONF git
link $CONF kupfer
link $CONF nvim
link $CONF qutebrowser
link $CONF sxhkd
link $CONF upm.properties
link $CONF xmodmap
link $CONF xresources
link $CONF zathura

## /etc/ files
sudolink $ETC slim.conf
sudolink $ETC slimlock.conf
X11="X11/xorg.conf.d/"
sudolink $ETC $X11"10-keyboard.conf"
sudolink $ETC $X11"50-synaptics.conf"

## slim theme
sudolink "/usr/share/slim/themes/" slim-minimal

## packages

